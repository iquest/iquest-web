<script type="text/javascript">
  window.addEventListener('resize', menu_change);
  window.addEventListener('load', menu_change);
  function menu_change() {
    const menuHiddenLinks = document.querySelectorAll('.hide');
    if (window.matchMedia('(max-width: 768px)').matches) {
      menuHiddenLinks.forEach(function(link){link.style.display = "block"})
    } else {
      menuHiddenLinks.forEach(function(link){link.style.display = "none"})
    }
  }
</script>
