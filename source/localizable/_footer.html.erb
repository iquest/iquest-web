							<% link_to t('urls.contact') do %>
								<%= t('footer.map') %> <i class="fa fa-lg fa-arrow-circle-right"></i>
							<% end  %>
							<br />
							<br />
							<a href="tel:+420777314768" class="c-phone"><i class="fa fa-phone"></i> 777 314 768</a>
							<br />
							<i class="fa fa-envelope"></i> <a href="mailto:vyvojari@iquest.cz">vyvojari@iquest.cz</a>
							<br />
							<br />
							<a href="https://www.facebook.com/iquest.cz" class="c-facebook", aria-label="facebook stránka"><i class="fa fa-facebook"></i></a>
							<a href="https://twitter.com/iQuestCZ" class="c-twitter"><i class="fa fa-twitter", aria-label="twitter profil"></i></a>
							<a href="https://www.linkedin.com/company/iquest-s-r-o-/?originalSubdomain=cz" class="c-linkedin", aria-label="linkedin profil"><i class="fa fa-linkedin"></i></a>
						</div>
					</div>
					<div class="col-50">
						<div class="inner">
							<u>Kancelář Brno</u>
							<br />iQuest s.r.o.
							<br /> Cejl 494/25
							<br /> 602 00 Brno
							<br />
							<br />
							<% link_to t('urls.contact') do %>
								<%= t('footer.map') %> <i class="fa fa-lg fa-arrow-circle-right"></i>
							<% end  %>
						</div>
					</div>
				</div>
			</div>
			<div class="col-50">
				<div class="offset">
					<div class="title"><%= t('footer.simply_contact_us') %>:</div>
					<div class="inner">
						<form action="//formspree.io/vyvojari@iquest.cz" method="POST" id="contact_form" class="contact-form" novalidate>
							<input type="hidden" name="_next" value="https://www.iquest.cz/success" />
							<input type="text" name="_gotcha" style="display:none" />
							<div class="form-group">
								<label for="email">E-mail:</label>
								<input type="email" name="email" id="email" required>
								<span class="error" aria-live="polite"></span>
							</div>
							<div class="form-group">
								<label for="message"><%= t('footer.message') %>:</label>
								<textarea wrap="soft | hard" name="message" id="message" required><%= t('footer.message_example') %></textarea>
								<span class="error" aria-live="polite"></span>
							</div>
							<button type="submit" id="submit_<%= current_page.page_id.split('.')[0] %>"><i class="fa fa-share"></i> <%= t('footer.send_contact') %></button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</footer>
