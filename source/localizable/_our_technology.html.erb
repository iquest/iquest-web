<div class="our-technology">
  <h2 class="text-center" data-aos="fade-up"><%= t('pages.main.our_main_echnologies') %>:</h2>
  <div class="cards">
    <% url = I18n.locale == :en ? '/en/technology' : '/technologie' %>
    <% link_to "#{url}/ruby-on-rails", :class => 'card half', :'data-aos' => 'fade-up' do %>
      <div class="content ruby-on-rails"></div>
      <div class="title">
        Ruby on Rails
      </div>
    <% end  %>
    <% link_to "#{url}/react", :class => 'card half', :'data-aos' => 'fade-up' do %>
      <div class="content react"></div>
      <div class="title">
        React
      </div>
    <% end %>
    <% link_to "#{url}/react-native", :class => 'card half', :'data-aos' => 'fade-up' do %>
      <div class="content react-native"></div>
      <div class="title">
        React Native
      </div>
    <% end %>
    <% link_to "#{url}/emberjs", :class => 'card half', :'data-aos' => 'fade-up' do %>
      <div class="content emberjs"></div>
      <div class="title">
        Ember JS
      </div>
    <% end %>
    <% link_to "#{url}/firebase", :class => 'card half', :'data-aos' => 'fade-up' do %>
      <div class="content firebase"></div>
      <div class="title">
        Firebase
      </div>
    <% end %>
    <% link_to "#{url}/cordova", :class => 'card half', :'data-aos' => 'fade-up' do %>
      <div class="content cordova"></div>
      <div class="title">
        Apache Cordova
      </div>
    <% end %>
  </div>
  <% link_to t('urls.technology'), :class => 'text-center', :'data-aos' => 'fade-up' do %>
  <h3 class='text-green'><%= t('pages.main.more_about_technology') %> <i class="fa text-green fa-arrow-circle-right"></i></h3>
  <% end %>
</div>
