<script>
  //pillar open toggle
  const navbarEl = document.querySelector('.navigation .navbar');
  const pillars = document.querySelectorAll(".pillar");
  pillars.forEach(function(pillar) {
    pillar.addEventListener('click', function(){
      if(!this.classList.contains('active')) {
        const backLink = document.querySelector('.navigation .navbar .back');
        backLink.parentNode.removeChild(backLink);
        this.classList.add("active", "animate");
        activeCloseBtn();
      } else {
        if (!Array.from(pillars).some(pillar => pillar.classList.contains("animate"))) {
          this.classList.remove("active");
          const closeLink = document.querySelector('.navigation .navbar .close');
          closeLink.parentNode.removeChild(closeLink);
          activeBackBtn();
        }
      }
    })
    pillar.addEventListener('transitionend', function() {
      this.classList.remove("animate");
    })
  });

  document.addEventListener("click", function() {
    const closeLinks = document.querySelectorAll(".navigation .navbar .close");
    closeLinks.forEach(function(closeLink) {
      closeLink.addEventListener("click", function() {
        document.querySelector(".pillar.active").classList.remove('active');
        closeLink.parentNode.removeChild(closeLink);
        activeBackBtn();
      })
    })
  })



  //open pillar from url
  let pillar_active = getUrlParameter('pillar');

  if (pillar_active !== 'undefined' && (pillar_active == 1 ||
      pillar_active == 2 ||
      pillar_active == 3 ||
      pillar_active == 4)) {
    activeCloseBtn();
    document.querySelectorAll(".pillar")[pillar_active - 1].classList.add('active', 'animate');
  } else {
    activeBackBtn();
  }

  function activeBackBtn() {
    const newBackEl = document.createElement("li");
    newBackEl.classList.add("back");
    const newLink = document.createElement("a");
    newLink.classList.add("small");
    newLink.href = '/';
    const newSpanEl = document.createElement("span");
    newSpanEl.classList.add('text');
    const newIconEl = document.createElement("i");
    newIconEl.classList.add("fa", "fa-lg" , "fa-arrow-left");
    newSpanEl.appendChild(newIconEl);
    newLink.appendChild(newSpanEl);
    newBackEl.appendChild(newLink);
    navbarEl.insertBefore(newBackEl, navbarEl.firstChild);
  }

  function activeCloseBtn() {
    const newCloseEl = document.createElement("li");
    newCloseEl.classList.add("close");
    const newLink = document.createElement("a");
    newLink.classList.add("small");
    newLink.href = '#';
    const newSpanEl = document.createElement("span");
    newSpanEl.classList.add('text');
    const newIconEl = document.createElement("i");
    newIconEl.classList.add("fa", "fa-lg" , "fa-times");
    newSpanEl.appendChild(newIconEl);
    newLink.appendChild(newSpanEl);
    newCloseEl.appendChild(newLink);
    navbarEl.insertBefore(newCloseEl, navbarEl.firstChild);
  }
</script>
